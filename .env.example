# Database
DATABASE_URL=postgres://kuxani:kuxani_secret@localhost:5432/kuxani  # Coolify: use internal hostname, e.g. postgres://kuxani:<pwd>@kuxani-postgres-dev:5432/kuxani

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-here  # Generate with: openssl rand -hex 32
BETTER_AUTH_URL=http://localhost:3000  # Production: https://kuxani.com | Dev: https://dev.kuxani.com

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# MinIO / S3 Storage
MINIO_ENDPOINT=localhost              # Coolify: internal hostname | Public S3 API: minio.kuxani.com
MINIO_PORT=9000
MINIO_ACCESS_KEY=kuxani_minio
MINIO_SECRET_KEY=kuxani_minio_secret
MINIO_BUCKET=kuxani-uploads           # Dev: kuxani-uploads-dev

# Hocuspocus WebSocket
HOCUSPOCUS_PORT=1234

# App
NODE_ENV=development                        # Must be 'production' in Docker; use APP_ENV for deployment label
APP_ENV=development                          # development | staging | production
NEXT_PUBLIC_APP_URL=http://localhost:3000   # Production: https://kuxani.com | Dev: https://dev.kuxani.com
NEXT_PUBLIC_WS_URL=ws://localhost:1234      # Production: wss://ws.kuxani.com | Dev: wss://ws.dev.kuxani.com

